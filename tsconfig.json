{
	"compilerOptions": {
		"resolveJsonModule": true,
		"target": "es2016",
		"module": "es6",
		"strict": true,
		"noImplicitAny": false,
		"noEmit": true,
		"allowJs": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [ "./*" ]
		},
		"typeRoots": [
			"node_modules/@types",
			"node_modules/phaser/types",
			"types"
		],
		"types": [
			"phaser", 
			"custom"
		]
	},
	"include": ["src/**/*"]
}
